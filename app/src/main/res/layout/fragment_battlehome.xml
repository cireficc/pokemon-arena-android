<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BottomBarActivity"
    android:background="@color/color_venusaur">

    <Switch
        android:id="@+id/type_ban_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type Bans?"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/light_grey">
        <TextView
            android:id="@+id/type_ban_title_text"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Types To Ban"
            android:textSize="9pt"
            android:textStyle="bold"
            android:gravity="center"/>
        <GridView
            android:id="@+id/type_ban_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:numColumns="4"
            android:layout_height="140dp"
            >
        </GridView>
    </LinearLayout>

    <Button
        android:text="@string/battle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/battle_now_button" />

    <Button
        android:text="AI Battle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ai_battle_button" />

    <include layout="@layout/fragment_battleui"/>

</LinearLayout>