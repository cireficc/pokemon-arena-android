<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BottomBarActivity"
    android:background="@color/color_venusaur">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/light_grey">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Types To Ban"
            android:textSize="9pt"
            android:textStyle="bold"
            android:gravity="center"/>
        <GridView
            android:id="@+id/type_ban_layout"
            android:layout_width="match_parent"
            android:numColumns="4"
            android:layout_height="140dp"
            >
        </GridView>
    </LinearLayout>

    <Button
        android:text="@string/battle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/battle_now_button" />

    <include layout="@layout/fragment_battleui"/>

</LinearLayout>