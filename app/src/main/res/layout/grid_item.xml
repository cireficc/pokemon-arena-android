<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="140dp"
    android:layout_width="100dp">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
        android:id="@+id/pokemon_number_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#151"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingEnd="3dp"
        android:paddingStart="3dp"
        android:paddingTop="5dp"
        />
            <TextView
                android:id="@+id/pokemon_name_title_textview"
                android:layout_width="wrap_content"
                android:text="@string/app_name"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/pokemon_number_textview"
                android:paddingEnd="3dp"
                android:paddingStart="3dp"
                android:paddingTop="5dp"
                />

            <ImageView
                android:id="@+id/pokemon_grid_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY="1.4"
                android:scaleX="1.2"
                android:layout_centerInParent="true"
                android:layout_below="@id/pokemon_name_title_textview"
                android:src="@mipmap/electabuzz"
                />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pokemon_type1_imageview"
        android:src="@mipmap/firetype"
        android:layout_below="@+id/pokemon_grid_imageview"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pokemon_grid_imageview"
        android:id="@+id/pokemon_type2_imageview"
        android:src="@mipmap/typebug"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        />

        </RelativeLayout>
</android.support.v7.widget.CardView>

</LinearLayout>