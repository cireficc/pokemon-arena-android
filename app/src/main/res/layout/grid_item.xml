<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="180dp"
    android:layout_width="134.5dp">


    <android.support.v7.widget.CardView
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="10dp"
        card_view:cardBackgroundColor="@android:color/holo_blue_light"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pokemon_number_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#103"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingEnd="3dp"
                android:paddingStart="3dp"
                android:paddingTop="5dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pokemon_type1_imageview"
                android:src="@drawable/ic_type_grass"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pokemon_type2_imageview"
                android:src="@drawable/ic_type_psychic"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:paddingRight="10dp"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp" />

            <ImageView
                android:id="@+id/pokemon_grid_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY="1.4"
                android:scaleX="1.2"
                android:src="@drawable/ic_pokemon_exeggutor"
                android:layout_below="@+id/pokemon_name_title_textview"
                android:layout_above="@+id/pokemon_type1_imageview"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/pokemon_name_title_textview"
                android:layout_width="wrap_content"
                android:text="Exeggutor"
                android:layout_height="wrap_content"
                android:paddingEnd="3dp"
                android:paddingStart="3dp"
                android:paddingTop="5dp"
                android:layout_below="@+id/pokemon_number_textview"
                android:layout_alignParentStart="true"
                android:textStyle="normal|bold"
                android:fontFamily="sans-serif" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>