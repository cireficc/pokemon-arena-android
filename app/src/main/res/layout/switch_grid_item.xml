<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="130dp"
    android:layout_width="110dp"
    android:background="@color/color_blastoise">


    <android.support.v7.widget.CardView
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardBackgroundColor="@color/color_blastoise"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/pokemon_grid_item_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/pokemon_grid_imageview"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:focusableInTouchMode="false"
                android:checked="false"/>

            <ImageView
                android:id="@+id/pokemon_grid_imageview"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleY="1.05"
                android:scaleX="1.05"
                android:layout_margin="4dp"
                android:src="@drawable/ic_pokemon_bulbasaur"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/pokemon_name_title_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bulbasaur"
                android:gravity="center_horizontal"
                android:textStyle="normal|bold"
                android:fontFamily="sans-serif"
                android:layout_below="@id/pokemon_grid_imageview"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>