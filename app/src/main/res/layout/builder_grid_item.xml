<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="140dp"
    android:layout_width="130dp">


    <android.support.v7.widget.CardView
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardBackgroundColor="@color/color_blastoise">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:id="@+id/pokemon_grid_item_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:checked="false"/>
            <TextView
                android:id="@+id/pokemon_number_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#1"
                android:textStyle="normal|bold"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/pokemon_name_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bulbasaur"
                android:textStyle="normal|bold"
                android:fontFamily="sans-serif"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                />
            <ImageView
                android:id="@+id/pokemon_grid_imageview"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleY="1.05"
                android:scaleX="1.05"
                android:src="@drawable/ic_pokemon_bulbasaur"
                android:layout_below="@+id/pokemon_name_title_textview"
                android:layout_above="@+id/pokemon_type1_imageview"
                android:layout_centerHorizontal="true"
                />

            <ImageView
                android:id="@+id/pokemon_type1_imageview"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_type_grass"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                />
            <ImageView
                android:id="@+id/pokemon_type2_imageview"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_type_poison"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>